@model List<Stock.Application.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "Products";
}

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a href="#" class="btn btn-outline-success">Crear nuevo producto</a> 
        </div>
    </div>

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <h2>No hay productos</h2>
        }
        else
        {
            @foreach (Stock.Application.ViewModels.ProductViewModel item in Model)
            {
                <div class="col-4">
                    <div class="card shadow-sm">
                        <img class="bd-placeholder-img card-img-top" src="@item.PathImage" alt="@item.Name" style="max-height: 200px; object-fit: cover;" />
                        <div class="card-body">
                            <h4>@item.Name</h4>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">

                                    <a href="#" class="btn btn-sm btn-outline-info">Editar</a>
                                    <a href="#" class="btn btn-sm btn-outline-danger">Borrar</a>

                                </div>
                                <small class="fw-bold fs-6">$@item.Precio</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
